<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/paper_backg">


    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:rotation="-4">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/personicon"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_alignWithParentIfMissing="false"
                android:minWidth="250dp"
                android:minHeight="250dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:maxHeight="250dp"
                android:maxWidth="250dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/polaroid_frame"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_alignWithParentIfMissing="false"
                android:scaleX="1.75"
                android:layout_alignParentBottom="false"
                android:scaleY="1.75"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:id="@+id/detailText"
        android:textSize="30sp"
        android:background="@drawable/tape3"
        android:paddingLeft="16sp"
        android:paddingRight="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:rotation="2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/pnumber"
            android:layout_below="@+id/detailText"
            android:textSize="20sp"
            android:background="@drawable/tape1"
            android:layout_marginTop="3dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:rotation="-2"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@android:color/background_light"
            android:layout_alignParentLeft="false"
            android:baselineAlignBottom="false"
            android:layout_gravity="center"
            android:layout_below="@+id/pnumber"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@android:drawable/sym_action_call"
            android:scaleX="2"
            android:scaleY="2"
            android:hapticFeedbackEnabled="true"
            android:rotation="5"/>

</RelativeLayout>
