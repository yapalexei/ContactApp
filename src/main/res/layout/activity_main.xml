    <com.yapalexei.contactapp.ListView3d
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignParentLeft="true"
            android:headerDividersEnabled="false"
            android:fastScrollEnabled="true"
            android:layout_marginTop="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:divider="@android:color/transparent"
            android:layout_alignTop="@+id/textView2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:background="@drawable/tape_left"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text=""/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:background="@drawable/tape_center"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:autoText="false"
            android:layout_alignParentTop="true"
            android:text="Contacts List"
            android:layout_toRightOf="@+id/textView"
            android:layout_toLeftOf="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:background="@drawable/tape_right"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=""/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tape_right"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/editText2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:background="@drawable/tape_center"
            android:textSize="20dp"
            android:hint="Filter Contact List"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toRightOf="@+id/editText3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tape_left"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/editText3"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/clearButton"
            android:layout_alignTop="@+id/editText"
            android:layout_toLeftOf="@+id/editText2"
            android:textSize="21sp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:onClick="clearFilterText"/>


</RelativeLayout>
